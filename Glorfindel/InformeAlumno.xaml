<Page x:Class="Glorfindel.InformeAlumno"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Glorfindel"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="InformeAlumno"
      Background="#f2f2f2"
      >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            
            <RowDefinition/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" x:Name="LInformeAlumno" Content="Informe por Alumno" HorizontalAlignment="Center" FontSize="40"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <DataGrid x:Name="VistaAlumnos" Grid.Column="0" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalAlignment="Stretch" SelectionChanged="Vistarecursos_SelectionChanged" />
            <DataGrid x:Name="Vistarecursos" Grid.Column="1" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalAlignment="Stretch" />
        </Grid>
        

    </Grid>
</Page>
